<% @page_title = "Contact Us"%>
<div id="contactSend">
<%= error_messages_for 'contact' %>
<h1>Heyudo Contact Form</h1>
<%= start_form_tag ({:action => 'create'}, :multipart => true) %>
<fieldset>
     <%= hidden_field "contact", "user_id", :value => 
                                              if @session['user'].nil?
                                              "0"
                                              else
                                              @session['user'].id
                                              end,
                                              :size => 30 %>
  <p><%= options = [["What are you contacting us about?", ""]] + Contact::CATEGORY
      select('contact', 'category', options) %></p>
  <p><label for="contact_email_address">Your email address: *required</label></p>
  <p><%= text_field "contact", "email_address", :value => 
                                                  if @session['user'].nil?
                                                  ""
                                                  else
                                                  @session['user'].email_address
                                                  end,
                                                  :size => 20 %></p>
  <p><label for="contact_message">Enter you message/question: *required</label></p>
  <p><%= text_area "contact", "message", :maxlength => 1500, :cols => 40, :rows => 5 %></p>
  <p><%= submit_tag "Send", :class => "submit" %></p>
  </fieldset>
  <%= end_form_tag %>
</div>